<project name="index.html">
    <code>
<![CDATA[
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image AI | Creative Studio</title>
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* === CSS STYLES === */
        
        /* Basic Reset */
        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', sans-serif; }
        body { background-color: #121212; color: #ffffff; overflow-x: hidden; }

        /* Header Design */
        header {
            display: flex; justify-content: space-between; align-items: center;
            padding: 15px 20px; background-color: #1e1e1e; border-bottom: 1px solid #333;
            position: sticky; top: 0; z-index: 100;
        }
        header button { background: none; border: none; color: white; font-size: 1.5rem; cursor: pointer; padding: 5px; }
        
        .logo {
            font-size: 1.5rem; font-weight: 800; letter-spacing: 1px;
            background: linear-gradient(45deg, #ff0055, #ffcc00);
            -webkit-background-clip: text; -webkit-text-fill-color: transparent;
            text-transform: uppercase;
        }

        .header-right { display: flex; align-items: center; gap: 15px; }
        #currentSizeDisplay { font-size: 0.8rem; background: #333; padding: 5px 10px; border-radius: 4px; color: #ccc; font-family: monospace; }

        /* Sidebar (History) */
        .sidebar {
            position: fixed; top: 0; left: -300px; width: 300px; height: 100%;
            background-color: #1a1a1a; z-index: 200; transition: left 0.3s ease-in-out;
            display: flex; flex-direction: column; border-right: 1px solid #333;
            box-shadow: 2px 0 15px rgba(0,0,0,0.7);
        }
        .sidebar.open { left: 0; }
        .sidebar-header { display: flex; justify-content: space-between; align-items: center; padding: 20px; border-bottom: 1px solid #333; background: #222; }
        
        .history-list { flex: 1; overflow-y: auto; padding: 15px; }
        
        /* Clear History Button */
        .clear-history-btn {
            width: 100%; padding: 10px; background: #333; color: #ff4d4d; border: none;
            cursor: pointer; border-top: 1px solid #444; font-size: 0.9rem;
        }
        .clear-history-btn:hover { background: #444; }

        .history-item {
            background: #2a2a2a; padding: 10px; margin-bottom: 12px; border-radius: 8px;
            cursor: pointer; display: flex; align-items: center; gap: 12px; transition: 0.2s;
            position: relative;
        }
        .history-item:hover { background: #333; }
        .history-thumb { width: 50px; height: 50px; object-fit: cover; border-radius: 6px; }
        .history-info div:first-child { font-weight: 600; font-size: 0.9rem; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 160px; }
        .history-info div:last-child { font-size: 0.75rem; color: #aaa; margin-top: 3px; }

        /* Settings Modal */
        .settings-overlay { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 90; }
        .settings-modal {
            position: absolute; top: 70px; right: 20px; background: #252525; padding: 20px;
            border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.6); display: none; z-index: 95; width: 280px;
            border: 1px solid #444; max-height: 80vh; overflow-y: auto;
        }
        .settings-modal.active { display: block; }
        .settings-modal h4 { margin-bottom: 15px; text-align: center; color: #ccc; border-bottom: 1px solid #444; padding-bottom: 10px; }
        .aspect-ratios { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; }
        .ratio-box { background: #333; padding: 12px; border-radius: 8px; text-align: center; cursor: pointer; border: 2px solid transparent; }
        .ratio-box:hover { background: #3d3d3d; }
        .ratio-box.active { border-color: #00d4ff; background: rgba(0, 212, 255, 0.1); }
        .ratio-box span { font-size: 0.75rem; display: block; margin-top: 8px; color: #ddd; }

        /* Icon Shapes */
        .shape { background: #777; margin: 0 auto; border-radius: 2px; }
        .shape.square { width: 20px; height: 20px; }
        .shape.landscape { width: 28px; height: 16px; margin-top: 2px; }
        .shape.portrait { width: 16px; height: 28px; margin-top: -4px; }
        .shape.wide { width: 26px; height: 20px; }
        .shape.photo { width: 24px; height: 16px; margin-top: 2px; }
        .shape.photo-p { width: 16px; height: 24px; margin-top: -2px; }
        .shape.cinematic { width: 30px; height: 12px; margin-top: 4px; }

        /* Main Image Area & Download Button */
        .main-content { padding-bottom: 100px; }
        .image-display-area { height: calc(100vh - 160px); display: flex; justify-content: center; align-items: center; padding: 20px; }
        .placeholder-content { text-align: center; color: #555; }
        
        #imageWrapper {
            position: relative;
            display: none; 
            max-width: 100%;
            max-height: 100%;
        }

        #generatedImage { 
            max-width: 100%; 
            max-height: 80vh; 
            border-radius: 12px; 
            display: block;
            box-shadow: 0 0 30px rgba(0,212,255,0.15); 
        }

        /* Download Button Style */
        .download-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            background-color: rgba(0, 0, 0, 0.6);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 8px;
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: 0.3s;
            backdrop-filter: blur(5px);
            font-size: 1.2rem;
            z-index: 10;
        }

        .download-btn:hover {
            background-color: #00d4ff;
            color: #000;
            transform: scale(1.1);
            box-shadow: 0 0 15px rgba(0, 212, 255, 0.5);
        }

        .loader { border: 5px solid #333; border-top: 5px solid #00d4ff; border-radius: 50%; width: 50px; height: 50px; animation: spin 1s linear infinite; display: none; }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }

        /* Input Area */
        .input-container { position: fixed; bottom: 0; left: 0; width: 100%; background: rgba(30,30,30,0.95); backdrop-filter: blur(10px); padding: 20px; border-top: 1px solid #333; display: flex; justify-content: center; z-index: 100; }
        .input-box { display: flex; gap: 10px; width: 100%; max-width: 800px; background: #2a2a2a; padding: 6px; border-radius: 50px; border: 1px solid #444; align-items: center; }
        .input-box:focus-within { border-color: #00d4ff; }
        textarea { flex: 1; background: transparent; border: none; padding: 12px 20px; color: white; resize: none; height: 50px; font-size: 1rem; outline: none; }
        #generateBtn { background: linear-gradient(135deg, #00d4ff, #9b00ff); border: none; color: white; padding: 0 30px; height: 40px; border-radius: 40px; cursor: pointer; font-weight: bold; margin-right: 5px; display: flex; align-items: center; gap: 8px; }
        #generateBtn:disabled { background: #555; cursor: not-allowed; }

        @media (max-width: 600px) {
            .settings-modal { right: 50%; transform: translateX(50%); width: 90%; }
            #generateBtn span { display: none; }
        }
    </style>
</head>
<body>

    <!-- Sidebar (History) -->
    <div id="sidebar" class="sidebar">
        <div class="sidebar-header">
            <h3><i class="fas fa-history"></i> Gallery</h3>
            <button id="closeSidebar"><i class="fas fa-times"></i></button>
        </div>
        <div class="history-list" id="historyList">
            <!-- History items load here -->
        </div>
        <button id="clearHistoryBtn" class="clear-history-btn"><i class="fas fa-trash"></i> Clear History</button>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <header>
            <button id="menuBtn"><i class="fas fa-bars"></i></button>
            <div class="logo">Image AI</div>
            <div class="header-right">
                <span id="currentSizeDisplay">1:1</span>
                <button id="settingsBtn"><i class="fas fa-cog"></i></button>
            </div>
        </header>

        <!-- Settings Modal (Sizes) -->
        <div id="settingsOverlay" class="settings-overlay"></div>
        <div id="settingsModal" class="settings-modal">
            <h4>Select Aspect Ratio</h4>
            <div class="aspect-ratios">
                <div class="ratio-box active" data-w="1024" data-h="1024" data-label="1:1">
                    <div class="shape square"></div>
                    <span>Square (1:1)</span>
                </div>
                <div class="ratio-box" data-w="1280" data-h="720" data-label="16:9">
                    <div class="shape landscape"></div>
                    <span>Landscape (16:9)</span>
                </div>
                <div class="ratio-box" data-w="720" data-h="1280" data-label="9:16">
                    <div class="shape portrait"></div>
                    <span>Portrait (9:16)</span>
                </div>
                <div class="ratio-box" data-w="1024" data-h="768" data-label="4:3">
                    <div class="shape wide"></div>
                    <span>Classic (4:3)</span>
                </div>
                <div class="ratio-box" data-w="1200" data-h="800" data-label="3:2">
                    <div class="shape photo"></div>
                    <span>Photo (3:2)</span>
                </div>
                <div class="ratio-box" data-w="800" data-h="1200" data-label="2:3">
                    <div class="shape photo-p"></div>
                    <span>Photo (2:3)</span>
                </div>
                <div class="ratio-box" data-w="1536" data-h="640" data-label="21:9">
                    <div class="shape cinematic"></div>
                    <span>Cinematic</span>
                </div>
            </div>
        </div>

        <!-- Image Display Area -->
        <div class="image-display-area" id="imageArea">
            <div class="placeholder-content">
                <i class="fas fa-image fa-4x"></i>
                <p>Ready to create</p>
            </div>
            
            <div id="imageWrapper">
                <img id="generatedImage" src="" alt="Generated Art">
                <!-- Download Button -->
                <button id="downloadBtn" class="download-btn" title="Download Image">
                    <i class="fas fa-download"></i>
                </button>
            </div>

            <div id="loader" class="loader"></div>
        </div>

        <!-- Input Section -->
        <div class="input-container">
            <div class="input-box">
                <textarea id="promptInput" placeholder=""></textarea>
                <button id="generateBtn">
                    <i class="fas fa-magic"></i> <span>Generate</span>
                </button>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Elements
            const menuBtn = document.getElementById('menuBtn');
            const sidebar = document.getElementById('sidebar');
            const closeSidebar = document.getElementById('closeSidebar');
            const settingsBtn = document.getElementById('settingsBtn');
            const settingsModal = document.getElementById('settingsModal');
            const settingsOverlay = document.getElementById('settingsOverlay');
            const ratioBoxes = document.querySelectorAll('.ratio-box');
            const currentSizeDisplay = document.getElementById('currentSizeDisplay');
            const promptInput = document.getElementById('promptInput');
            const generateBtn = document.getElementById('generateBtn');
            const imageWrapper = document.getElementById('imageWrapper');
            const generatedImage = document.getElementById('generatedImage');
            const downloadBtn = document.getElementById('downloadBtn');
            const placeholderContent = document.querySelector('.placeholder-content');
            const loader = document.getElementById('loader');
            const historyList = document.getElementById('historyList');
            const clearHistoryBtn = document.getElementById('clearHistoryBtn');

            let currentWidth = 1024;
            let currentHeight = 1024;

            // --- LOCAL STORAGE LOGIC (HISTORY) ---
            loadHistory();

            function loadHistory() {
                historyList.innerHTML = '';
                const historyData = JSON.parse(localStorage.getItem('imageAI_history')) || [];
                
                if (historyData.length === 0) {
                    historyList.innerHTML = '<p style="color: #666; font-size: 13px; text-align: center; margin-top: 20px;">No previous projects</p>';
                } else {
                    historyData.forEach(item => {
                        createHistoryItem(item.text, item.url, item.size);
                    });
                }
            }

            function saveToLocalStorage(text, url, size) {
                const historyData = JSON.parse(localStorage.getItem('imageAI_history')) || [];
                historyData.unshift({ text, url, size });
                localStorage.setItem('imageAI_history', JSON.stringify(historyData));
            }

            function createHistoryItem(text, url, size) {
                const div = document.createElement('div');
                div.className = 'history-item';
                div.innerHTML = `
                    <img src="${url}" class="history-thumb">
                    <div class="history-info">
                        <div>${text}</div>
                        <div>${size}</div>
                    </div>
                `;
                div.addEventListener('click', () => {
                    generatedImage.src = url;
                    imageWrapper.style.display = 'block';
                    placeholderContent.style.display = 'none';
                    sidebar.classList.remove('open');
                });
                
                const emptyMsg = historyList.querySelector('p');
                if(emptyMsg) emptyMsg.remove();
                
                historyList.prepend(div);
            }

            // Clear History
            clearHistoryBtn.addEventListener('click', () => {
                if(confirm('Are you sure you want to clear all history?')) {
                    localStorage.removeItem('imageAI_history');
                    loadHistory();
                }
            });

            // --- UI LOGIC ---

            function toggleMenu() { sidebar.classList.toggle('open'); }
            menuBtn.addEventListener('click', toggleMenu);
            closeSidebar.addEventListener('click', toggleMenu);

            function toggleSettings() {
                settingsModal.classList.toggle('active');
                settingsOverlay.style.display = settingsModal.classList.contains('active') ? 'block' : 'none';
            }
            settingsBtn.addEventListener('click', toggleSettings);
            settingsOverlay.addEventListener('click', toggleSettings);

            // Size Select
            ratioBoxes.forEach(box => {
                box.addEventListener('click', () => {
                    document.querySelectorAll('.ratio-box').forEach(b => b.classList.remove('active'));
                    box.classList.add('active');
                    currentWidth = box.getAttribute('data-w');
                    currentHeight = box.getAttribute('data-h');
                    currentSizeDisplay.innerText = box.getAttribute('data-label');
                    toggleSettings(); 
                });
            });

            // Generation Logic
            generateBtn.addEventListener('click', async () => {
                const text = promptInput.value.trim();
                
                // VALIDATION: Check for empty text
                if(!text || text.length < 3) {
                    alert('Please enter a descriptive prompt to generate an image.');
                    return;
                }

                promptInput.value = ''; // Clear input

                // UI Reset
                placeholderContent.style.display = 'none';
                imageWrapper.style.display = 'none';
                loader.style.display = 'block';
                generateBtn.disabled = true;
                promptInput.blur();

                const seed = Math.floor(Math.random() * 999999);
                // API URL
                const imageUrl = `https://image.pollinations.ai/prompt/${encodeURIComponent(text)}?width=${currentWidth}&height=${currentHeight}&seed=${seed}&nologo=true`;

                const img = new Image();
                img.src = imageUrl;
                img.crossOrigin = "Anonymous"; // Crucial for download

                img.onload = () => {
                    loader.style.display = 'none';
                    generatedImage.src = imageUrl;
                    imageWrapper.style.display = 'block';
                    generateBtn.disabled = false;
                    
                    // Save history
                    createHistoryItem(text, imageUrl, currentSizeDisplay.innerText);
                    saveToLocalStorage(text, imageUrl, currentSizeDisplay.innerText);
                };

                img.onerror = () => {
                    loader.style.display = 'none';
                    placeholderContent.style.display = 'block';
                    generateBtn.disabled = false;
                    alert('Failed to generate image. Please try again.');
                };
            });

            // --- FORCE DOWNLOAD LOGIC ---
            downloadBtn.addEventListener('click', async () => {
                const imageUrl = generatedImage.src;
                
                // Spinner feedback
                const icon = downloadBtn.querySelector('i');
                icon.className = 'fas fa-spinner fa-spin';

                try {
                    // Fetch image data as Blob
                    const response = await fetch(imageUrl);
                    const blob = await response.blob();
                    
                    // Create invisible link
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.style.display = 'none';
                    a.href = url;
                    a.download = `ImageAI-${Date.now()}.jpg`; // Filename for Gallery
                    document.body.appendChild(a);
                    
                    // Click it
                    a.click();
                    
                    // Cleanup
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);
                    
                    // Success feedback
                    icon.className = 'fas fa-check';
                    setTimeout(() => icon.className = 'fas fa-download', 2000);

                } catch (error) {
                    console.error('Download failed:', error);
                    // Fallback
                    window.open(imageUrl, '_blank');
                    icon.className = 'fas fa-download';
                }
            });
        });
    </script>
</body>
</html>
